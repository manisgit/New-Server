{
  "name": "Service Management Application",
  "description": "A comprehensive service management system for tracking customer requests and inventory",
  "repository": "https://github.com/YOUR_USERNAME/YOUR_REPO_NAME",
  "logo": "",
  "keywords": ["node", "express", "react", "postgresql", "service-management"],
  "image": "heroku/nodejs",
  "addons": [
    {
      "plan": "heroku-postgresql:mini",
      "as": "DATABASE"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Environment mode",
      "value": "production"
    }
